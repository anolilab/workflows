            "@octokit/plugin-paginate-rest@>=9.3.0-beta.1 <11.4.1": ">=14.0.0",
            "brace-expansion@>=1.0.0 <=1.1.11": ">=4.0.1",
            "tmp@<=0.2.3": ">=0.2.5",
            "js-yaml@<3.14.2": ">=4.1.1",
            "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1"
