{
    "name": "gh-actions",
    "private": true,
    "type": "module",
    "scripts": {
        "audit": "audit-ci --config ./audit-ci.jsonc",
        "preinstall": "node verify-node-version.cjs && npx only-allow pnpm",
        "prepare": "is-ci || husky || exit 0",
        "sort-package-json": "sort-package-json ./package.json"
    },
    "devDependencies": {
        "@anolilab/commitlint-config": "^5.0.3",
        "@anolilab/lint-staged-config": "^2.1.7",
        "@anolilab/prettier-config": "^5.0.14",
        "@anolilab/semantic-release-preset": "^10.0.4",
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@secretlint/secretlint-rule-preset-recommend": "^9.3.2",
        "audit-ci": "^7.1.0",
        "commitizen": "^4.3.1",
        "conventional-changelog-conventionalcommits": "8.0.0",
        "cross-env": "^7.0.3",
        "husky": "^9.1.7",
        "is-ci": "^4.1.0",
        "lint-staged": "^15.5.2",
        "prettier": "^3.5.3",
        "secretlint": "9.3.2",
        "semantic-release": "^24.2.3",
        "sort-package-json": "^3.2.0"
    },
    "packageManager": "pnpm@10.10.0",
    "engines": {
        "node": ">=18.* <=24.*"
    },
    "pnpm": {
        "overrides": {
            "@commitlint/config-conventional": "^19.8.0",
            "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5",
            "micromatch@<4.0.8": ">=4.0.8",
            "@octokit/request-error@>=6.0.0 <6.1.7": ">=6.1.7",
            "@octokit/endpoint@>=10.0.0 <10.1.3": ">=10.1.3",
            "@octokit/request@>=9.0.0-beta.1 <9.2.1": ">=9.2.1",
            "@octokit/plugin-paginate-rest@>=9.3.0-beta.1 <11.4.1": ">=11.4.1"
        },
        "onlyBuiltDependencies": [
            "@anolilab/commitlint-config",
            "@anolilab/lint-staged-config",
            "@anolilab/prettier-config"
        ]
    }
}
