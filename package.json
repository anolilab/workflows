{
    "name": "gh-actions",
    "private": true,
    "type": "module",
    "scripts": {
        "audit": "audit-ci --config ./audit-ci.jsonc",
        "preinstall": "node verify-node-version.cjs && npx only-allow pnpm",
        "prepare": "is-ci || husky || exit 0",
        "sort-package-json": "sort-package-json ./package.json"
    },
    "devDependencies": {
        "@anolilab/commitlint-config": "^8.0.0",
        "@anolilab/lint-staged-config": "^4.0.0",
        "@anolilab/prettier-config": "^8.0.0",
        "@anolilab/semantic-release-preset": "^12.1.2",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
        "audit-ci": "^7.1.0",
        "commitizen": "^4.3.1",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cross-env": "^10.1.0",
        "husky": "^9.1.7",
        "is-ci": "^4.1.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "secretlint": "11.2.5",
        "semantic-release": "^25.0.2",
        "sort-package-json": "^3.6.0"
    },
    "packageManager": "pnpm@10.26.1",
